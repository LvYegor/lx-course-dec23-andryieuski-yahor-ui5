<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        icon="sap-icon://question-mark"
        title="{i18n>confirmation}"
        afterClose="onAfterClose">
        <Label class="sapUiSmallMargin" text="{i18n>deleteProductConfirmText}"/>
        <buttons>
            <Button text="{i18n>ok}" press="onSubmitDeleteProductPress"/>
            <Button text="{i18n>close}" press="onCancelDeletePress"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>