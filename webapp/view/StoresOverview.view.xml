<mvc:View
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="yahor.andryieuski.controller.StoresOverview">
    <f:DynamicPage id="storesOverviewPageId" class="sapUiNoContentPadding" showFooter="true">
        <f:title>
            <f:DynamicPageTitle>
                <f:breadcrumbs>
                    <Breadcrumbs>
                        <Link text="{i18n>storesList}"/>
                    </Breadcrumbs>
                </f:breadcrumbs>
                <f:heading>
                    <Title text="{i18n>storesList}" wrapping="true"/>
                </f:heading>
                <f:actions>
                    <Button
                        text="{i18n>switchLanguage}"
                        type="Emphasized"
                        press="onSwitchLanguagePress"
                    />
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>

        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <Toolbar style="Clear">
                    <SearchField search="onStoresSearch" placeholder="{i18n>storeInputPlaceholder}" width="100%" showRefreshButton="true"/>
                </Toolbar>
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <List items="{storesModel>/Stores}" id="storesListId">
                <items>
                    <ObjectListItem
                        title="{storesModel>Name}"
                        type="Active"
                        press="onStoresListItemPress"
                        number="{storesModel>FloorArea}"
                        numberUnit="{i18n>areaUnit}">
                        <attributes>
                            <ObjectAttribute text="{storesModel>Address}"/>
                        </attributes>
                    </ObjectListItem>
                </items>
            </List>
        </f:content>

        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button icon="sap-icon://add" text="{i18n>create}" press="onCreateStorePress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>